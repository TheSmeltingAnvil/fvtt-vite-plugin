[*]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*{.json,.yaml,.yml}]
indent_size = 2

[*{.js,.mjs,.ts}]
indent_size = 2
max_line_length = 120

[COMMIT_EDITMSG]
max_line_length = off
trim_trailing_whitespace = true
